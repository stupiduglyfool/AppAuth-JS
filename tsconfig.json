{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "dom", "es2015" ],
        "rootDir": "src",
        "outDir": "built",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "built"
    ],
    "compileOnSave": true
}
